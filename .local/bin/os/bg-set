#!/bin/sh

##########################
# Set desktop background #
##########################

# dmenu appearance
alias dmenu="dmenu -m \"0\" -fn \"monospace:size=18\" -nb \"#222222\" -nf \"#bbbbbb\" -sb \"#003a4e\" -sf \"#eeeeee\""

BG_DIR="$HOME"/Pictures/bg

choice=$(
  find "$BG_DIR" -mindepth 1 -maxdepth 1 | \
  dmenu -i -p 'Select BG:'
) || exit 1

feh --bg-fill "$BG_DIR/$choice"

