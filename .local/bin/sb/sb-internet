#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "Internet module" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Get connected network name
# nmcli -t -f active,ssid dev wifi | grep -E '^yes' | cut -d "yes:"

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="ðŸŒ"
	netname="$(nmcli -t -f active,ssid dev wifi | grep -E '^yes' | cut -c 5-)"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ðŸ“¡ " || wifiicon="âŒ "
fi

# Ethernet
# [ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ðŸŒ" || ethericon="âŽ"

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && wifiicon="ðŸ”’"

printf "%s %s\n" "$wifiicon" "$netname"

